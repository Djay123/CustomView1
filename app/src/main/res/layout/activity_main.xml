<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.djay.customview.mview.CustomView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/custom_layout"
            app:titleText="hello view"
            app:titleTextSize="30sp"
            app:titleTextColor="#FF0000"
            android:padding="10dp"/>

        <com.example.djay.customview.mview.CustomImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/custom_imageview"
            app:titleText="This is a picture for lanuch"
            app:titleTextSize="20sp"
            app:imageScaleType="center"
            app:image="@mipmap/ic_launcher"
            app:titleTextColor="#FF0000"
            android:padding="20dp"

            android:layout_marginTop="30dp"/>
        <com.example.djay.customview.mview.CustomImageView
            android:layout_height="400dp"
            android:layout_width="150dp"
            android:id="@+id/custom_imageview2"
            app:titleText="This is a picture for lanuch"
            app:titleTextSize="20sp"
            app:imageScaleType="center"
            app:image="@mipmap/ic_launcher"
            app:titleTextColor="#FF0000"
            android:paddingBottom="20dp"
            android:layout_marginTop="30dp"/>

        <com.example.djay.customview.mview.CustomProgressBar
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:id="@+id/custom_progressbar"
            app:firstColor="#8000"
            app:secondColor="#11F711"
            app:speed="20"
            app:circleWidth="10dp"/>

        <com.example.djay.customview.mview.CustomControlBar
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:id="@+id/custom_controlbar"
            app:firstColor="#00ff00"
            app:secondColor="#ff0000"
            app:count="20"
            app:splitSize="25"
            app:circleWidth="12dp"
            app:image="@mipmap/ic_launcher"/>

        <com.example.djay.customview.mview.CustomCircleProgress
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            app:startAngles="135"
            app:endAngles="270"
            app:circleWidth="7dp"
            app:radius="150dp" />
        <com.example.djay.customview.mview.CustomDialProgress
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            app:startAngles="135"
            app:endAngles="270"
            app:circleWidth="7dp"
            app:radius="100dp"
            app:maxValue="300"
            app:count="80"/>


    </LinearLayout>
</ScrollView>