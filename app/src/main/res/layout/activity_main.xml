<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto/com.example.djay.customview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.djay.customview.mview.CustomView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_layout"
        custom:titleText="hello view"
        custom:titleTextSize="30sp"
        custom:titleTextColor="#FF0000"
        android:padding="10dp"/>

    <com.example.djay.customview.mview.CustomImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/custom_imageview"
        app:titleText="This is a picture for lanuch"
        app:titleTextSize="20sp"
        app:imageScaleType="center"
        app:image="@mipmap/ic_launcher"
        app:titleTextColor="#FF0000"
        android:padding="20dp"

        android:layout_marginTop="30dp"/>
    <com.example.djay.customview.mview.CustomImageView
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:id="@+id/custom_imageview2"
        app:titleText="This is a picture for lanuch"
        app:titleTextSize="20sp"
        app:imageScaleType="center"
        app:image="@mipmap/ic_launcher"
        app:titleTextColor="#FF0000"
        android:paddingBottom="20dp"
        android:layout_marginTop="30dp"/>

    <com.example.djay.customview.mview.CustomProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_progressbar"
        app:firstColor="#8000"
        app:secondColor="#11F711"
        app:speed="20"
        app:circleWidth="10dp"/>


</LinearLayout>
