<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <attr name="titleText" format="string"/>
    <attr name="titleTextColor" format="color"/>
    <attr name="titleTextSize" format="dimension"/>
    <attr name="image" format="reference"/>
    <attr name="firstColor" format="color"/>
    <attr name="secondColor" format="color"/>
    <attr name="circleWidth" format="dimension"/>
    <attr name="speed" format="integer"/>
    
    <attr name="count" format="integer"/>
    <attr name="splitSize" format="integer"/>
    <attr name="radius" format="dimension"/>
    <attr name="maxValue" format="float"/>

    <attr name="dialRadius" format="dimension"/>
    <attr name="dialMaxValue" format="integer"/>

    <attr name="imageScaleType">
        <enum name="fillXY" value="0"/>
        <enum name="center" value="1"/>
    </attr>
    
    
    <attr name="startAngles" format="integer"/>
    <attr name="endAngles" format="integer"/>


    <declare-styleable name="test">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>

    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
        <attr name="image"/>
        <attr name="imageScaleType"/>

    </declare-styleable>

    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="speed"/>
    </declare-styleable>
    
    <declare-styleable name="CustomControlBar">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="count"/>
        <attr name="splitSize"/>
        <attr name="image"/>
    </declare-styleable>
    
    
    <declare-styleable name="CustomCircleProgress">
        <attr name="startAngles"/>
        <attr name="endAngles"/>
        <attr name="circleWidth"/>
        <attr name="radius"/>
        <attr name="maxValue"/>
    </declare-styleable>

    <declare-styleable name="CustomDialProgress">
        <attr name="startAngles"/>
        <attr name="endAngles"/>
        <attr name="circleWidth"/>
        <attr name="radius"/>
        <attr name="maxValue"/>
        <attr name="count"/>
    </declare-styleable>

</resources>